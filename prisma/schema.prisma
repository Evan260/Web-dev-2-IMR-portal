generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String

  @@map("users") 
}


model Movie {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  actors      String[] @map("cast")
  releaseYear Int      @map("year")
  // If your documents don't include these fields, you can make them optional
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt

  @@map("movies") 
}

enum Role {
  USER
  ADMIN
}
